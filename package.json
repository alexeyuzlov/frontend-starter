{
  "name": "webpack-sample",
  "version": "1.0.0",
  "scripts": {
    "build": "npx webpack",
    "build:dev": "npm run clean:dist && npm run webpack -- --config webpack.dev.js --progress --profile",
    "build:prod": "npm run clean:dist && npm run webpack -- --config webpack.prod.js --bail",
    "ci": "npm run lint && npm run test && npm run build:prod",
    "clean:dist": "npx rimraf -- dist",
    "lint": "npx tslint \"src/**/*.ts\"",
    "server:dev": "npm run webpack-dev-server -- --config webpack.dev.js --progress --watch",
    "start": "npm run server:dev",
    "test": "npx karma start",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "webpack-dev-server": "node --max_old_space_size=8192 node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "webpack": "node --max_old_space_size=8192 node_modules/webpack/bin/webpack.js"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jasmine": "3.5.14",
    "awesome-typescript-loader": "5.2.1",
    "circular-dependency-plugin": "5.2.0",
    "copy-webpack-plugin": "6.1.1",
    "css-loader": "4.3.0",
    "file-loader": "6.1.0",
    "html-webpack-plugin": "4.5.0",
    "import-glob-loader": "1.1.0",
    "jasmine-core": "3.6.0",
    "karma": "5.2.2",
    "karma-chrome-launcher": "3.1.0",
    "karma-jasmine": "4.0.1",
    "karma-mocha-reporter": "2.2.5",
    "karma-webpack": "4.0.2",
    "mini-css-extract-plugin": "0.11.2",
    "node-sass": "4.14.1",
    "rimraf": "3.0.2",
    "sass-loader": "10.0.2",
    "style-loader": "1.2.1",
    "tslint": "6.1.3",
    "tslint-loader": "3.5.4",
    "typescript": "4.0.3",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "5.1.4"
  },
  "dependencies": {
    "normalize.css": "8.0.1"
  }
}
